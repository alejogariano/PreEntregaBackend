<h1>Gestión de Usuarios</h1>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Ultima vez conectado</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.first_name}} {{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.last_connection}}</td>
            <td>
                <form action="/admin/users/{{this._id}}/role" method="POST">
                    <select name="role" onchange="this.form.submit()">
                        <option value="user" {{#if (equals this.role 'user')}}selected{{/if}}>User</option>
                        <option value="premium" {{#if (equals this.role 'premium')}}selected{{/if}}>Premium</option>
                        <option value="admin" {{#if (equals this.role 'admin')}}selected{{/if}}>Admin</option>
                    </select>
                </form>
            </td>
            <td>
                <form action="/admin/users/{{this._id}}" method="POST" onsubmit="return confirm('¿Estás seguro de eliminar a este usuario?');">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>